<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarolApp.MainPage">

   <Grid>
   <Image Source="capapp.png"
     Opacity=".6"
     Aspect="AspectFill"/>

    <Label Text="textando"
        TextColor="white"
        Margin="20"
        FontSize="60"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>

    <VerticalStackLayout
                            VerticalOptions="End"
                            Spacing="10"
                            Margin="15,0,15,40">

            <Button Text="Iniciar"
            Clicked="StartButton_1"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="White"
            TextColor="Black"
            Margin="0,0,0,10"
            FontSize="18"/>
            
            <Button Text="Sobre"
            Clicked="StartButton_2"
            BorderColor="White"
            BorderWidth="1"
            HeightRequest="50"
            CornerRadius="25"
            BackgroundColor="White"
            TextColor="Black"
            FontSize="16"/>

      </VerticalStackLayout>  
      </Grid>
      </ContentPage>
